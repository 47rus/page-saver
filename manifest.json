{
  "manifest_version": 3,
  "name": "Page Saver",
  "version": "1.0",
  "description": "A simple extension to save pages.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "commands": {
    "save-all-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Save all tabs in the current window"
    }
  }
}